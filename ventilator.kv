#:kivy 1.11.1
#:import LinePlot kivy_garden.graph.LinePlot

<Header>:
    orientation: "horizontal"
    size_hint: (1, None)
    height: 60
    spacing: 5
    padding: 5
    canvas:
        Color:
            rgba: 0.07, 0.196, 0.392, 1
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation: "horizontal"
        padding_x: 15
        Image:
            id: avatar
            source: "young-man.png"
            keep_ratio: False
            allow_stretch: False
            size_hint_x: None
            width: 40
        Label:
            id: user
            text: "Zacharias Townsend\n765-316-1313"
            font_size: 18
            text_size: self.size
            halign: "left"
            valign: "middle"
            padding_x: 15
    BoxLayout:
        orientation: "horizontal"
        padding_x: 15
        Image:
            id: logo
            source: "iAI white.png"
            keep_ratio: False
            allow_stretch: False
            size_hint_x: None
            width: 170
        Label:
            id: "brand"
            text: "NeoBreath"
            font_size: 30
            halign: "left"
    Label:
        id: time
        text: "9:48 PM"
        font_size: 18
        text_size: self.size
        halign: "right"
        valign: 'middle'
        padding_x: 10

<Home>:
    pressure: pressure
    flow: flow
    volumn: volumn
    canvas:
        Color:
            rgba: 0.0157, 0.1137, 0.2667, 1
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation: "horizontal"
        BoxLayout:
            size_hint_x: None
            width: 800
            orientation: "vertical"
            #plot1 - pressure
            #plot2 - flow
            #plot3 - volumn
            
            Graph:
                id: pressure
                plot: LinePlot
                #xlabel:'X'
                ylabel:'Pressure'
                tick_color: [1,1,1,0.5]
                #x_ticks_minor:2
                #x_ticks_major:10
                #y_ticks_major:0.5
                y_grid_label:True
                x_grid_label:False
                padding:5
                x_grid:True
                y_grid:True
                #xmin:-0
                #xmax:100
                #ymin:-0
                #ymax:1
                #pos: 0, root.height / 6
                #size: root.width * 2 / 3 , root.height * 18 / 24
            Graph:
                id: flow
                plot: LinePlot
                #xlabel:'X'
                ylabel:'Flow'
                tick_color: [1,1,1,0.5]
                #x_ticks_minor:2
                #x_ticks_major:10
                #y_ticks_major:0.5
                y_grid_label:True
                x_grid_label:False
                padding:5
                x_grid:True
                y_grid:True
                #xmin:-0
                #xmax:100
                #ymin:-0
                #ymax:1
                #pos: 0, root.height / 6
                #size: root.width * 2 / 3 , root.height * 18 / 24
            Graph:
                id: volumn
                plot: LinePlot
                #xlabel:'X'
                ylabel:'Volumn'
                tick_color: [1,1,1,0.5]
                #x_ticks_minor:2
                #x_ticks_major:10
                #y_ticks_major:0.5
                y_grid_label:True
                x_grid_label:False
                padding:5
                x_grid:True
                y_grid:True
                #xmin:-0
                #xmax:100
                #ymin:-0
                #ymax:1
                #pos: 0, root.height / 6
                #size: root.width * 2 / 3 , root.height * 18 / 24

        BoxLayout:
            orientation: "vertical"
            id: right
            #parameter1 IE ratio
            #parameter2 Para
            #parameter3 temp
            #parameter4 humidity
            Label:
                id: ieratio
                text: "I:E Ratio\n1:3"
                font_size: 30
                text_size: self.size
                halign: "center"
                valign: "middle"
                padding_x: 15
            Label:
                id: param
                text: "Parameter\n225"
                font_size: 30
                text_size: self.size
                halign: "center"
                valign: "middle"
                padding_x: 15
            Label:
                id: temp
                text: "Temperature\n75\N{DEGREE SIGN}F"
                font_size: 30
                text_size: self.size
                halign: "center"
                valign: "middle"
                padding_x: 15
            Label:
                id: humid
                text: "Humidity\n80%"
                font_size: 30
                text_size: self.size
                halign: "center"
                valign: "middle"
                padding_x: 15



<Records>:
    canvas:
        Color:
            rgba: 0.0157, 0.1137, 0.2667, 1
        Rectangle:
            pos: self.pos
            size: self.size


<Alarms>:
    canvas:
        Color:
            rgba: 0.0157, 0.1137, 0.2667, 1
        Rectangle:
            pos: self.pos
            size: self.size


<MainMenu>:
    orientation: "horizontal"
    size_hint: (1, None)
    height: 50
    spacing: 5
    padding: 5
    canvas:
        Color:
            rgba: 0.0157, 0.1137, 0.2667, 1
        Rectangle:
            pos: self.pos
            size: self.size
    ToggleButton:
        group: "mainmenu"
        state: "down"
        text: "Home"
        background_color: 0.07, 0.196, 0.392, 1.0
        on_press:
            app.manager.current = "home"
            if self.state == "normal": self.state = "down"
    ToggleButton:
        group: "mainmenu"
        text: "Records"
        background_color: 0.07, 0.196, 0.392, 1.0
        on_press:
            app.manager.current = "records"
            if self.state == "normal": self.state = "down"
    ToggleButton:
        group: "mainmenu"
        text: "Alarms"
        background_color: 0.07, 0.196, 0.392, 1.0
        on_press:
            app.manager.current = "alarms"
            if self.state == "normal": self.state = "down"


